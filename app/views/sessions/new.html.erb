<section class="depot_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>

  <%= form_tag do %>
    <div class="field">
      <%= label_tag :name, "Username:" %>
      <%= text_field_tag(:name,
                          params[:name],
                          placeholder: "Enter your username here",
      ) %>
    </div>

    <div class="field">
      <%= label_tag :password, "Password:" %>
      <%= password_field_tag(:password,
                          params[:password],
                          placeholder: "Enter your password here",
      ) %>
    </div>

    <div class="actions">
      <%= submit_tag "Login" %>
    </div>

  <% end %>
</section>
