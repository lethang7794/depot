<!DOCTYPE html>
<html>
  <head>
    <title>DEPOT: One of many online commercial sites</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="banner">
      <a href="/">
        <%= image_tag 'online_store.svg', alt: 'The store logo'  %>
      </a>
      <h1>This Is The Store Name</h1>
      <h1><%= @page_title %></h1>
    </header>

    <section class="content">
      <nav class="side_bar">

        <% if @cart && @cart.line_items.any? %>
          <div class="carts" id="side_cart">
            <%= render_if @cart && @cart.line_items.any?, @cart %>
          </div>
        <% elsif @cart %>
          <div class="carts" id="side_cart_first_empty">
            <%= render_if @cart && @cart.line_items.any?, @cart %>
          </div>
        <% end %>

        <ul>
          <li><a href="/"><%= t('.home') %></a></li>
          <li><a href="/"><%= t '.questions' %></a></li>
          <li><a href="/"><%= t '.contact' %></a></li>
        </ul>

        <% if session[:user_id] %>
          <nav class="logged-in-nav-bar">
            <ul>
              <li><%= link_to 'Orders', orders_path %></li>
              <li><%= link_to 'Users', users_path %></li>
              <li><%= link_to 'Products', products_path %></li>
              <li><%= link_to "Line Items", line_items_path %></li>
              <li><%= button_to 'Logout', logout_path, method: :delete %></li>
            </ul>
          </nav>
        <% end %>

        <div id="test-time">
          Store Controller:
          <br>
          <%= @time %>
        </div>
        <div id="test-time">
          App Controller:
          <br>
          <%= ApplicationController.time %>
        </div>

      </nav>

      <main class='<%= controller.controller_name %>'>
        <%= yield %>
      </main>
    </section>
    <%= javascript_pack_tag 'application' %>
  </body>
</html>
