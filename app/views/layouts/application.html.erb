<!DOCTYPE html>
<html>
  <head>
    <title>One of many online commercial sites</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1>This Is The Store Name</h1>
      <h1><%= @page_title %></h1>
    </header>

    <section>
      <nav class="side_bar">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/questions">Questions</a></li>
          <li><a href="/news">News</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>

        <div class="date-time">
          Time From Store Controller<%= @time %>
        </div>
        <div class="date-time">
          Time From Application Controller<%= ApplicationController.time %>
        </div>

      </nav>

      <main class='<%= controller.controller_name %>'>
        <%= yield %>
      </main>
    </section>

  </body>
</html>
