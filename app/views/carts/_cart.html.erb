<article class="">
  <% if notice %>
    <p id="notice"><%= notice %></p>
  <% end %>

  <h2><%= t '.your_cart' %></h2>

  <table>
    <%= render cart.line_items %>
    <tfoot>
      <tr>
        <th colspan="5">Total:</th>
        <th class="price"><%= number_to_currency(cart.total_price) %></th>
        <th></th>
      </tr>
    </tfoot>
  </table>

  <p>
    <%= button_to t('.empty_cart'), cart,
                    method: :delete,
                    data: {confirm: 'Are you sure?'},
                    remote: true,
                    class: "delete_button" %>

    <%= button_to t(".checkout"), new_order_path(locale: I18n.locale),
                    method: :get,
                    class: "checkout_button" %>

  </p>

  <% unless cart.id.nil? %>
    <%= link_to 'Edit', edit_cart_path(cart) %>
  <% end %>
  <%= link_to 'Back', carts_path %>
</article>
