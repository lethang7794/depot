<div class="depot_form">
<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h2>Change Password</h2>

  <div class="field">
    <%= form.text_field :name, hidden: "true" %>
  </div>

  <div class="field">
    <%= form.label :old_password, "Old Password:" %>
    <%= form.password_field :old_password, size: 40 %>
  </div>

  <div class="field">
    <%= form.label :password, "New Password:" %>
    <%= form.password_field :password, size: 40 %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation, "New Password Confirmation:" %>
    <%= form.password_field :password_confirmation, size: 40 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

</div>
